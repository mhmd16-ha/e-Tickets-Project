@model IEnumerable<Movie>
@{
    ViewData["Title"] = "List of Movies";
}

<table class="table table-striped">
  <thead>
    <tr class="text-center">
      <th scope="col">@Html.DisplayNameFor(model=>model.ImageUrl)</th>
      <th scope="col">@Html.DisplayNameFor(model=>model.Name)</th>
      <th scope="col">@Html.DisplayNameFor(model=>model.Description)</th>
      
    </tr>
  </thead>
  <tbody>
      @foreach(var item in Model){
    <tr class="text-center">
      <td class="align-middle" scope="row">
          <img src="@item.ImageUrl" style="Max-width:100px;height:100px;border-radius:50px" alt="@item.Name"/>
      </td>
      <td class="align-middle">@Html.DisplayFor(m=>item.Name)</td>
      <td class="align-middle">@Html.DisplayFor(m=>item.Description)</td>

    </tr>
    }
  </tbody>
</table>