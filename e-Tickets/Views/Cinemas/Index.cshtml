@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "List of Cinemas";
}

<table class="table table-striped">
  <thead>
    <tr class="text-center">
      <th scope="col">@Html.DisplayNameFor(model=>model.Logo)</th>
      <th scope="col">@Html.DisplayNameFor(model=>model.Name)</th>
      <th scope="col">@Html.DisplayNameFor(model=>model.Description)</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
      @foreach(var item in Model){
    <tr class="text-center">
      <td class="align-middle" scope="row">
          <img src="@item.Logo" style="Max-width:100px;height:100px;border-radius:50px" alt="@item.Name"/>
      </td>
      <td class="align-middle">@Html.DisplayFor(m=>item.Name)</td>
      <td class="align-middle">@Html.DisplayFor(m=>item.Description)</td>
      <td class="align-middle">
          <a class="btn" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye" style="font-size:25px;color:blue"></i></a> |
          <a class="btn" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit" style="font-size:25px;color:green"></i></a> |
          <a class="btn" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash" style="font-size:25px;color:red"></i></a> |
      </td>
    </tr>
    }
  </tbody>
</table>
 <div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
        <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New
        </a>
  </div>